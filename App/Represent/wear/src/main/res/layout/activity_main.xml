<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:gravity="center" android:layout_gravity="center"
    tools:context=".MainActivity" android:orientation="vertical" tools:deviceIds="wear_round"
    android:background="#FFFFFF"
    android:id="@+id/watchLayout"
    >

    <TextView
        android:id="@+id/lblHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Politicial Name"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lblSubheader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Position and Party"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:layout_below="@+id/lblHeader"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:width="75dp"
        android:height="75dp"
        android:id="@+id/picMain"
        android:src="@drawable/election2012"
        android:paddingBottom="5dp"
        android:layout_above="@+id/lblHeader"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        android:id="@+id/imgBtnDown"
        android:onClick="toggle2012View"
        android:src="@drawable/arrow_down"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FFFFFF"
        />

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/imgBtnLeft"
        android:onClick="switchPoliticianLeft"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow_left"
        android:layout_above="@+id/lblHeader"
        android:layout_toStartOf="@+id/picMain"
        android:layout_alignTop="@+id/picMain"
        android:background="#FFFFFF"
        />

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/imgBtnRight"
        android:onClick="switchPoliticianRight"
        android:scaleType="centerCrop"
        android:src="@drawable/arrow_right"
        android:layout_alignBottom="@+id/picMain"
        android:layout_toEndOf="@+id/picMain"
        android:layout_alignTop="@+id/picMain"
        android:background="#FFFFFF"
        />


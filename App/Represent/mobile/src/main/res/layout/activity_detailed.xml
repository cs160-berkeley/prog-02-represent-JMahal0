<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jas.represent.DetailedActivity">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:width="75dp"
        android:height="75dp"
        android:id="@+id/picFace"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Politician Name"
        android:id="@+id/lblName"
        android:textAlignment="center"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/picFace"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Position and Party"
        android:id="@+id/lblPosnParty"
        android:textAlignment="center"
        android:paddingTop="5dp"
        android:layout_below="@+id/lblName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Committees"
        android:id="@+id/lblCommittee"
        android:paddingTop="15dp"
        android:layout_marginTop="25dp"
        android:textAlignment="center"
        android:layout_below="@+id/lblPosnParty"
        android:layout_alignStart="@+id/picFace" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Recent Bills Sponsored"
        android:id="@+id/lblRecentBill"
        android:paddingTop="15dp"
        android:textAlignment="center"
        android:layout_below="@+id/spinCommittees"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinCommittees"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lblCommittee"
        android:layout_alignParentLeft="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinRecentBills"
        android:layout_below="@+id/lblRecentBill"
        android:layout_alignParentLeft="true" />



</RelativeLayout>

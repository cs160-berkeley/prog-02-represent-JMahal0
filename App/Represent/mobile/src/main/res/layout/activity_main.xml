<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jas.represent.MainActivity">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find your\nPoliticians!"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginTop="70dp"
        android:id="@+id/lblTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="45dp"
        android:textAlignment="center"
        />

    <EditText
        android:layout_width="160dp"
        android:layout_height="75dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etxtZip"
        android:text=""
        android:hint="Enter Zip Code"
        android:textColorHint="#000000"
        android:background="#00CC44"
        android:textAlignment="center"
        android:textAppearance="?android:textAppearanceLarge"
        android:layout_marginBottom="25dp"
        android:layout_above="@+id/btnLocation"
        android:layout_alignStart="@+id/btnLocation" />

    <Button
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/btnLocation"
        android:textColorHint="#000000"
        android:background="#00CC44"
        android:text="Use Current Location"
        android:hint=""
        android:textAppearance="?android:textAppearanceLarge"
        android:textAlignment="center"
        android:layout_marginBottom="45dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="getLocation"/>

    <Button
        android:layout_width="80dp"
        android:layout_height="75dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/btnGo"
        android:textColorHint="#000000"
        android:background="#00CC44"
        android:text="Go"
        android:hint=""
        android:textAppearance="?android:textAppearanceLarge"
        android:textAlignment="center"
        android:layout_alignTop="@+id/etxtZip"
        android:layout_alignEnd="@+id/btnLocation"
        android:onClick="zipGo"
        />


</RelativeLayout>
